<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UI"
    xmlns:categoryView="clr-namespace:UI.Windows.Category" 
xmlns:personView="clr-namespace:UI.Windows.Person"
    Shell.FlyoutBehavior="Flyout">

      <FlyoutItem Title="Cats"
                Icon="cat.png">
         <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>

       </Tab>
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate categoryView:CreateCategoryPage}"/>
       </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Dogs"
                Icon="dog.png">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate personView:CreatePersonPage}" />
       </Tab>
    </FlyoutItem>
   
</Shell>

