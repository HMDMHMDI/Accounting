<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Windows.Category.CreateCategoryPage"
             Title="CreateCategoryPage">
    <VerticalStackLayout HorizontalOptions="Center" Spacing="20"  Margin="0,40,0,0">
        <HorizontalStackLayout Spacing="20">
            <Label Text="Title" Margin="0,10,0,0"/>
            <Entry Placeholder="Enter Title" x:Name="txtTitle" />
        </HorizontalStackLayout>

        <Button Text="Add" x:Name="btnAdd" Clicked="btnAdd_Clicked"/>
        <Button Text="ShowData" x:Name="btnShowData" Clicked="btnShowData_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
